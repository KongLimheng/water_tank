{
  "compilerOptions": {
    "outDir": "./dist-server",
    "rootDir": "./server",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false
  },
  "include": ["server/server.ts", "server/lib/**/*.ts"],
  "exclude": ["node_modules"]
}
